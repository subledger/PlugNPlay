<h1>Simulate a Purchase</h1>

<%= form_for :purchase, url: simulate_pay_path do |f| %>
  <div class="form-group">
    <%= f.label :transaction_id %>
    <%= f.text_field :transaction_id, class: "form-control", placeholder: "Ex: 1", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :merchant_id %>
    <%= f.text_field :merchant_id, class: "form-control", placeholder: "Ex: merchant1@test.com", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, class: "form-control", placeholder: "Ex: 100", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", placeholder: "Ex: Brazil vs Argentina Game" %>
  </div>

  <div class="form-group">
    <%= f.label :reference_url %>
    <%= f.url_field :reference_url, class: "form-control", placeholder: "Ex: http://www.sportngin.com/ticket/123456", required: true %>
  </div>
  
  <%= f.submit "Pay", class: "btn btn-default" %>
<% end %>
