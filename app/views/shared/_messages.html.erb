<% if alert.present? %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Alert</strong> <%= alert %>
  </div>
<% end %>

<% if notice.present? %>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Notice: </strong> <%= notice %>
  </div>
<% end %>
